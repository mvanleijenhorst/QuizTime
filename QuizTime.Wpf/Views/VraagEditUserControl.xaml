<UserControl x:Class="QuizTime.UI.Views.VraagEditUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizTime.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel  Grid.Row="0" Orientation="Horizontal">
            <Label>De vraag</Label>
            <TextBox x:Name="VraagText" Width="400"></TextBox>
        </StackPanel>
        <StackPanel  Grid.Row="1" Orientation="Horizontal">
            <Button Name="OpslaanVraag" Content="_Opslaan" Click="OpslaanVraag_Click"></Button>
            <Button Name="AnnuleerVraag" Content="_Annuleren" Click="AnnuleerVraag_Click"></Button>
        </StackPanel>
    </Grid>
</UserControl>
